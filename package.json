
{
  "name": "markdown-mc",
  "displayName": "Markdown-MC",
  "description": "Support pour le format Markdown-MC (Multiple Choice Questions)",
  "version": "1.2.0",
  "publisher": "marcferre",
  "repository": {
    "type": "git",
    "url": "https://github.com/marc-ferre/markdown-mc"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "markdown",
    "qcm",
    "multiple choice",
    "quiz",
    "education"
  ],
  "contributes": {
    "languages": [
      {
        "id": "markdown-mc",
        "aliases": ["Markdown-MC", "markdown-mc", "QCM"],
        "extensions": [".qcm", ".mcq"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "markdown-mc",
        "scopeName": "text.markdown.mc",
        "path": "./syntaxes/markdown-mc.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "markdown-mc",
        "path": "./snippets/markdown-mc.json"
      }
    ]
  }
}
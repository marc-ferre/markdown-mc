{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Markdown-MC",
  "scopeName": "text.markdown.mc",
  "patterns": [
    {
      "name": "markup.heading.qcm.markdown-mc",
      "match": "^(##)\\s*(\\[)([^\\]]*)(\\])\\s*$",
      "captures": {
        "1": { "name": "punctuation.definition.heading.markdown-mc" },
        "2": { "name": "punctuation.definition.qcm.begin.markdown-mc" },
        "3": { "name": "entity.name.qcm.identifier.markdown-mc" },
        "4": { "name": "punctuation.definition.qcm.end.markdown-mc" }
      }
    },
    {
      "name": "markup.heading.question.markdown-mc", 
      "match": "^(###)\\s+(.+)$",
      "captures": {
        "1": { "name": "punctuation.definition.heading.markdown-mc" },
        "2": { "name": "entity.name.section.question.markdown-mc" }
      }
    },
    {
      "name": "markup.list.correct.markdown-mc",
      "match": "^(\\+)\\s+(.+)$",
      "captures": {
        "1": { "name": "punctuation.definition.list.correct.markdown-mc" },
        "2": { "name": "markup.correct.answer.markdown-mc" }
      }
    },
    {
      "name": "markup.list.incorrect.markdown-mc",
      "match": "^(-)\\s+(.+)$", 
      "captures": {
        "1": { "name": "punctuation.definition.list.incorrect.markdown-mc" },
        "2": { "name": "markup.incorrect.answer.markdown-mc" }
      }
    }
  ]
}
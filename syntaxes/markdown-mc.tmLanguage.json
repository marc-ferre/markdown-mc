{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Markdown-MC",
  "scopeName": "text.markdown.mc",
  "patterns": [
    {
      "name": "markup.heading.setext.2.markdown",
      "match": "^(##)\\s*(\\[)([^\\]]*)(\\])\\s*$",
      "captures": {
        "1": { "name": "punctuation.definition.heading.markdown" },
        "2": { "name": "punctuation.definition.string.begin.markdown" },
        "3": { "name": "string.other.link.title.markdown" },
        "4": { "name": "punctuation.definition.string.end.markdown" }
      }
    },
    {
      "name": "markup.heading.setext.3.markdown", 
      "match": "^(###)\\s+(.+)$",
      "captures": {
        "1": { "name": "punctuation.definition.heading.markdown" },
        "2": { "name": "entity.name.section.markdown" }
      }
    },
    {
      "name": "markup.list.numbered.markdown",
      "match": "^(\\+)\\s+(.+)$",
      "captures": {
        "1": { "name": "punctuation.definition.list_item.markdown" },
        "2": { "name": "markup.inserted" }
      }
    },
    {
      "name": "markup.list.unnumbered.markdown",
      "match": "^(-)\\s+(.+)$", 
      "captures": {
        "1": { "name": "punctuation.definition.list_item.markdown" },
        "2": { "name": "markup.deleted" }
      }
    }
  ]
}